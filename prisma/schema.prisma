generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Worker {
  id          String       @id @default(uuid())
  name        String       @unique
  role        WorkerRole   @default(CARWASH)
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  washRecords WashRecord[]

  @@index([isActive])
  @@index([name])
  @@index([role])
}

model WashRecord {
  id              String       @id @default(uuid())
  plateNumber     String
  carType         String?
  phoneNumber     String?
  washType        WashType
  entryTime       DateTime     @default(now())
  finishTime      DateTime?
  elapsedMinutes  Int?
  paymentType     PaymentType?
  amountPaid      Float        @default(0)
  tipAmount       Float        @default(0)
  paymentReceived Boolean      @default(false)
  instapayProof   String?      @db.Text
  notes           String?
  status          Status       @default(IN_PROGRESS)
  workerId        String?
  worker          Worker?      @relation(fields: [workerId], references: [id])
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([entryTime])
  @@index([plateNumber])
  @@index([status])
  @@index([workerId])
  @@index([paymentReceived])
}

model MechanicRecord {
  id              String          @id @default(uuid())
  plateNumber     String
  carType         String?
  phoneNumber     String?
  category        ServiceCategory @default(OIL_SERVICE)
  oilType         OilType?
  oilPrice        Float           @default(0)
  serviceType     ServiceType?
  laborCost       Float           @default(0)
  filterPrice     Float           @default(0)
  serviceName     String?
  servicePrice    Float           @default(0)
  totalAmount     Float           @default(0)
  paymentType     PaymentType?
  paymentReceived Boolean         @default(false)
  notes           String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@index([createdAt])
  @@index([plateNumber])
  @@index([category])
}

enum WorkerRole {
  CARWASH
  MECHANIC
  BOTH
}

enum WashType {
  INNER
  OUTER
  FREE
  FULL
}

enum PaymentType {
  CASH
  INSTAPAY
}

enum Status {
  IN_PROGRESS
  FINISHED
  CANCELLED
}

enum ServiceCategory {
  OIL_SERVICE
  OTHER_SERVICE
}

enum OilType {
  SHELL_4L
  SHELL_5L
  CUSTOMER_OWN
}

enum ServiceType {
  OIL_ONLY
  OIL_AND_FILTER
}