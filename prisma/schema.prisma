generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Worker {
  id          String       @id @default(uuid())
  name        String       @unique
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  washRecords WashRecord[]

  @@index([isActive])
  @@index([name])
}

model WashRecord {
  id              String       @id @default(uuid())
  plateNumber     String
  carType         String?
  phoneNumber     String?
  washType        WashType
  entryTime       DateTime     @default(now())
  finishTime      DateTime?
  elapsedMinutes  Int?
  paymentType     PaymentType?
  amountPaid      Float        @default(0)
  tipAmount       Float        @default(0)
  paymentReceived Boolean      @default(false)
  instapayProof   String?      @db.Text
  notes           String?
  status          Status       @default(IN_PROGRESS)
  workerId        String?
  worker          Worker?      @relation(fields: [workerId], references: [id])
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([entryTime])
  @@index([plateNumber])
  @@index([status])
  @@index([workerId])
  @@index([paymentReceived])
}

enum WashType {
  INNER
  OUTER
  FREE
  FULL
}

enum PaymentType {
  CASH
  INSTAPAY
}

enum Status {
  IN_PROGRESS
  FINISHED
  CANCELLED
}
